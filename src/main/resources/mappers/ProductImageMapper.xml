<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.sbland.product.mapper.ProductImageMapper">
 	<insert id="insertProductImageList">
 		INSERT INTO `product_image`
 		(
			`product_id`
			,`url`
			,`is_thumbnail`
			,`position`
			,`updated_at`
			,`created_at`
 		)
 		VALUES
 		<foreach collection="list" item="image" separator=",">
	 		(
	 			#{image.productId}
	 			,#{image.url}
	 			,#{image.isThumbnail}
	 			,#{image.position}
	 			,NOW()
	 			,NOW()
	 		)	
 		</foreach>	
 	</insert>
 	 	<insert id="insertProductImage">
 		INSERT INTO `product_image`
 		(
			`product_id`
			,`url`
			,`is_thumbnail`
			,`position`
			,`updated_at`
			,`created_at`
 		)
 		VALUES
 		(
 			#{productId}
 			,#{url}
 			,#{isThumbnail}
 			,#{position}
 			,NOW()
 			,NOW()
 		)	
 	</insert>
 	<delete id="deleteProductImageById">
 		DELETE
 		FROM
 			`product_image`
 		WHERE
 			id = #{id}
 	</delete>
 	<delete id="deleteProductNotThumbnailImageByProductId">
 		DELETE
 		FROM
 			`product_image`
 		WHERE
 			`product_id` = #{productId} AND 
 			`is_thumbnail` = false
 	</delete>
 	<delete id="deleteProductImageByUrlIsNull">
 		DELETE
 		FROM
 			`product_image`
 		WHERE 
 			`url` IS NULL
 	</delete>
 	<select id="findProductImageIsNull">
 		SELECT
 			`product_id`
 		FROM
 			`product_image`
 		WHERE
 			`url` IS NULL AND `is_thumbnail` = true
 	</select>
 	<select id="selectProductThumbnailByproductIdIn" resultType="com.sbland.product.domain.ProductImage">
 		SELECT
 			`id`
			,`product_id`
			,`url`
			,`is_thumbnail`
			,`position`
			,`updated_at`
			,`created_at`
		FROM
			`product_image`
		WHERE
			`product_id` IN 
			<foreach collection="list" item="id" open="(" separator="," close=")">
 				#{id}
 			</foreach>
 			AND `is_thumbnail` = true
 	</select>
 	<select id="selectProductImageByProductId" resultType="com.sbland.product.domain.ProductImage">
 		SELECT
 			`id`
			,`product_id`
			,`url`
			,`is_thumbnail`
			,`position`
			,`updated_at`
			,`created_at`
		FROM
			`product_image`
		WHERE
			`product_id` = #{id}
		ORDER BY `position`
 	</select>
 	<select id="selectProductThumbnailImageByPorductId" resultType="com.sbland.product.domain.ProductImage">
 		SELECT
 			`id`
			,`product_id`
			,`url`
			,`is_thumbnail`
			,`position`
			,`updated_at`
			,`created_at`
		FROM
			`product_image`
		WHERE
			`product_id` = #{id} AND 
			`is_thumbnail` = true
 	</select>
 	<select id="selectProductNotThumbnailImageByProductId" resultType="com.sbland.product.domain.ProductImage">
 		SELECT
 			`id`
			,`product_id`
			,`url`
			,`is_thumbnail`
			,`position`
			,`updated_at`
			,`created_at`
		FROM
			`product_image`
		WHERE
			`product_id` = #{id} AND
			`is_thumbnail` = false
		ORDER BY `position`
 	</select>
 </mapper>